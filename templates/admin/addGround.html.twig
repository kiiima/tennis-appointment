<div class="flex items-stretch">
  {{form_start(addGroundForm,{'attr': {'class' : 'flex flex-col px-2', 'novalidate':'novalidate'} })}}
    <h3 class="text-xl font-bold mb-2 py-2">Add new ground: </h3>
    <small class="mb-3 italic">
      {{form_errors(addGroundForm.name)}}
    </small>

    <div class="flex flex-col mb-3">
      {{form_label(addGroundForm.name,'Ground name:',{'label_attr':{'class' : 'mb-2'} })}}
      {{form_widget(addGroundForm.name,{'attr':{'class' : 'rounded-md bg-lime-100'} })}}
    </div>

    <button type="submit" class="bg-lime-300 p-2 mb-3 rounded-md hover:bg-lime-400">
      Add
    </button>


  {{form_end(addGroundForm)}}
</div>

